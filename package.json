{
  "name": "zoho-crm-mcp-server",
  "version": "1.0.0",
  "description": "Zoho CRM MCP Server - Node.js TypeScript Implementation",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "start:dual": "tsx src/server.ts --dual-endpoints",
    "start:claude": "tsx src/server.ts --claude-only",
    "start:openai": "tsx src/server.ts --openai-only",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp package.json dist/",
    "health-check": "tsx scripts/health-check.ts",
    "deploy:build": "npm run build && npm run postbuild",
    "deploy:start": "NODE_ENV=production node dist/server.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "zoho",
    "crm",
    "api",
    "typescript",
    "nodejs",
    "claude",
    "openai"
  ],
  "author": "InterConnecta",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "undici": "^7.16.0",
    "axios": "^1.6.0",
    "cors": "^2.8.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "fastmcp": "^3.8.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/InterConnectaOrg/zoho-crm-mcp-node.git"
  },
  "bugs": {
    "url": "https://github.com/InterConnectaOrg/zoho-crm-mcp-node/issues"
  },
  "homepage": "https://github.com/InterConnectaOrg/zoho-crm-mcp-node#readme"
}
